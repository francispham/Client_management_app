<!DOCTYPE html>
<html>
  <head>
    <title>ClientManagementApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= javascript_pack_tag 'application' %>

  </head>

  <body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light container">
        <%= link_to image_tag( "logo.png", style: "height: 40px; "), root_path,
        class: "navbar-brand" %>
        <button class="navbar-toggler" type="button" data-toggle="collapse"
        data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false"
        aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item active">
            <%= link_to 'New Client', new_client_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to 'Clients', clients_path, class: "nav-link" %>
          </li>
          <li>
            <% if user_signed_in? %>
              <span class="nav-link">
                Hello,<%= current_user.first_name %>!
              </span>
          </li>
            <li class="nav-item">
              <% if current_user.is_admin? %>
                <%= link_to 'Dashboard', admin_dashboard_index_path, class: "nav-link" %>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to 'Sign Out', session_path, method: :delete, class: "nav-link" %>
            <% else %>
              <%= link_to 'Sign In', new_session_path, class: "nav-link" %>
            <% end %>
          </li>
        </ul>
      </div>
    </nav>
    <br>
    <div class="container-fluid">
      <% if flash[:notice].present? %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= flash[:notice] %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <% elsif flash[:alert].present? %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= flash[:alert] %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        <% end %>
        <div class="container">
          <%= yield %>
        </div>
      </body>
    </html>
