<h3>Admin Dashboard</h3>

<table class="table table-striped">
  <thead class="thead-dark">

    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Created At</th>
      <th>Is Admin?</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= time_ago_in_words(user.created_at) %></td>
        <td><%= user.is_admin? %></td>
      </tr>
    <% end %>
  </tbody>
</table>
